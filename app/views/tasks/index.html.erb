<h1>List of all the tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %> - <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
    <i class="fa-regular fa-trash-can"></i>
    <% end %></li>
  <% end %>
</ul>
<% string = '' %>
<i class="fa-solid fa-plus"></i><%= link_to 'Add new task' , new_task_path %>
