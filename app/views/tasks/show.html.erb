<h2><%= @task.title %></h2>
<h4><%= @task.details %></h4>
<h3><%= @task.completed %></h3>
<div class="buttons-container btn-group" role="group" aria-label="Basic outlined example">
  <button class="btn btn-outline-primary"><%= link_to "Edit task", edit_task_path%></button>
  <button class="btn btn-outline-primary"><%= link_to "Back to tasks list", tasks_path%></button>

    <%= link_to task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
    <i class="fa-regular fa-trash-can"></i>
    <% end %>

    

</div>
