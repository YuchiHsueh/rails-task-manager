<button><%= link_to "Edit task", edit_task_path%></button>
<br>
<button><%= link_to "Back to tasks list", tasks_path%></button>
<br>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
